<resources>

    <style name="AppTheme.RideShareImageButton" parent="Widget.AppCompat.ImageButton">
        <item name="android:background">@android:color/transparent</item>
        <item name="background">@android:color/transparent</item>
    </style>

    <style name="AppTheme.HeaderTextView" parent="Base.TextAppearance.AppCompat.Medium">
        <item name="android:textColor">@color/contrastForegroundColor</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="AppTheme.RideShareButton" parent="Base.Widget.AppCompat.Button.Colored">
        <item name="android:background">@drawable/round_button</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="AppTheme.EditText" parent="AppTheme.EditText">
    </style>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
    </style>
    <!-- Base application theme. -->

    <style name="AppTheme.Dialog" parent="AppTheme">
        <item name="colorAccent">@color/colorRideshare</item>
        <item name="colorPrimary">@android:color/black</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="android:textColor">@color/contrastForegroundColor</item>
    </style>

    <style name="CustomEditText" parent="Widget.AppCompat.EditText">
        <item name="android:textColor">@android:color/white</item>
        <item name="colorControlNormal">@color/translucent</item>
        <item name="colorControlActivated">@color/translucent</item>
        <item name="colorControlHighlight">@color/translucent</item>
    </style>

    <style name="AppTheme.Normal" parent="AppTheme">
        <item name="colorAccent">@color/colorRideshare</item>
        <item name="colorPrimary">@color/translucent</item>
        <item name="colorPrimaryDark">@color/translucent</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textColorHint">@color/foregroundColor</item>
        <item name="android:imageButtonStyle">@style/AppTheme.RideShareImageButton</item>
        <item name="imageButtonStyle">@style/AppTheme.RideShareImageButton</item>

        <item name="android:buttonStyle">@style/AppTheme.RideShareButton</item>
        <item name="buttonStyle">@style/AppTheme.RideShareButton</item>
    </style>

    <style name="AppTheme.Contrast" parent="AppTheme">
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="android:textColor">@color/contrastForegroundColor</item>
        <item name="android:textColorHint">@color/translucent</item>
        <item name="android:imageButtonStyle">@style/AppTheme.RideShareImageButton</item>
        <item name="imageButtonStyle">@style/AppTheme.RideShareImageButton</item>

        <item name="android:buttonStyle">@style/AppTheme.RideShareButton</item>
        <item name="buttonStyle">@style/AppTheme.RideShareButton</item>
    </style>


    <!-- Dark Buttons -->
    <style name="ThemeOverlay.MyDarkButton" parent="ThemeOverlay.AppCompat.Dark">
        <item name="colorButtonNormal">@color/colorAccent</item>
        <item name="android:layout_marginRight">4dp</item>
        <item name="android:layout_marginLeft">4dp</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <!-- Light EditTexts -->
    <style name="ThemeOverlay.MyLightEditText" parent="ThemeOverlay.AppCompat.Dark"/>

    <style name="ThemeOverlay.MyTextDetail" parent="AppTheme">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fadeScrollbars">true</item>
        <item name="android:gravity">center</item>
        <item name="android:maxLines">5</item>
        <item name="android:padding">4dp</item>
        <item name="android:scrollbars">vertical</item>
        <item name="android:textSize">14sp</item>
    </style>

</resources>