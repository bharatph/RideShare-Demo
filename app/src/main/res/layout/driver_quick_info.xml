<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    tools:showIn="@layout/ride_snapshot">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/snapshotDriverImage"
        android:layout_width="@dimen/user_profile_picture_small"
        android:layout_height="@dimen/user_profile_picture_small"
        android:layout_centerVertical="true"
        android:src="@drawable/user_null" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/medium"
        android:layout_marginStart="@dimen/medium"
        android:layout_toEndOf="@id/snapshotDriverImage"
        android:layout_toRightOf="@id/snapshotDriverImage"
        android:orientation="vertical">

        <TextView
            android:id="@+id/snapshotDriverName"
            style="@style/AppTheme.HeaderTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Alfred"
            android:textSize="@dimen/large" />

        <TextView
            android:id="@+id/snapshotDriverRating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="48 ratings" />
    </LinearLayout>
</RelativeLayout>