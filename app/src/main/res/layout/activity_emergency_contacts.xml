<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:theme="@style/AppTheme.Contrast"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.cz.rideshare.EmergencyContactsActivity">
<com.cz.rideshare.RideshareToolbar
    android:id="@+id/emergencyToolbar"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"/>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/emergencyContactsRecyclerView"
        android:layout_below="@+id/emergencyToolbar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</RelativeLayout>
