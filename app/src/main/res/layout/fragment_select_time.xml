<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/medium"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.cz.rideshare.SelectDate">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/textWhenHeaderContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
            android:textStyle="bold"
            android:textSize="@dimen/large"
            android:textColor="@color/contrastForegroundColor"
            android:layout_marginTop="@dimen/small"
            android:id="@+id/textWhen"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:text="when?"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
            <ImageButton
                app:srcCompat="@drawable/error"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>

        <TextView
            android:id="@+id/textWhenInfo"
            android:layout_marginTop="@dimen/medium"
            android:layout_below="@id/textWhenHeaderContainer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="@string/text_date_pick"
            android:textColor="@color/contrastForegroundColor" />

        <TimePicker
            android:layout_marginTop="@dimen/small"
            android:layout_below="@+id/textWhenInfo"
            android:id="@+id/timePicker"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        </TimePicker>

        <Button
            android:layout_marginTop="@dimen/small"
            android:layout_marginBottom="@dimen/small"
            android:layout_marginLeft="@dimen/xxlarge"
            android:layout_marginRight="@dimen/xxlarge"
            android:text="@string/button_ok"
            android:layout_below="@+id/timePicker"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </RelativeLayout>

</FrameLayout>
